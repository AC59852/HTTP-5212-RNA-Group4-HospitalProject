
@model HTTP_5212_RNA_Group4_HospitalProject.Models.PharmacyDto 
@{
    ViewBag.Title = "DeleteConfirm";
}

<h1 class="pharmacies__title">Delete @Model.PharmacyName</h1>
<h2 class="delete__subtitle">Are you sure you want to delete @Model.PharmacyName Pharmacy?</h2>
<form action="/Pharmacy/Delete/@Model.PharmacyID" class="pharmacy__links" method="POST">
    <input class="pharmacy__link--delete" type="submit" value="Delete" />
</form>
<style>
    .pharmacy__link--delete {
        border: none;
        border-bottom: solid 4px rgb(243, 67, 67);
        background: transparent;
    }

    .delete__subtitle {
        text-align: center;
        font-family: "Rubik", sans-serif;
        width: 80%;
        max-width: 600px;
        margin: 50px auto;
        line-height: 1.5;
    }
</style>

